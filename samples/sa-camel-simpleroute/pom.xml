<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>
   <parent>
      <artifactId>petals-camel-samples-parent</artifactId>
      <groupId>org.ow2.petals.samples</groupId>
      <version>5.0.0-SNAPSHOT</version>
      <relativePath>../parent/pom.xml</relativePath>
   </parent>

   <artifactId>sa-camel-simpleroute</artifactId>
   <packaging>jbi-service-assembly</packaging>

   <properties>
      <!-- Skip dependency check for service unit. -->
      <maven-dependency-plugin.failOnWarning>false</maven-dependency-plugin.failOnWarning>
   </properties>

   <dependencies>
      <dependency>
         <artifactId>su-camel-provides-simpleroute-java</artifactId>
         <groupId>org.ow2.petals.samples</groupId>
         <version>${project.version}</version>
         <type>jbi-service-unit</type>
      </dependency>
      <dependency>
         <artifactId>su-camel-provides-simpleroute-xml</artifactId>
         <groupId>org.ow2.petals.samples</groupId>
         <version>${project.version}</version>
         <type>jbi-service-unit</type>
      </dependency>
   </dependencies>

   <build>
      <plugins>
         <plugin>
            <groupId>org.ow2.petals</groupId>
            <artifactId>maven-petals-plugin</artifactId>
            <configuration>
               <serviceAssemblyNameMapping>${project.artifactId}</serviceAssemblyNameMapping>
            </configuration>
         </plugin>
      </plugins>
   </build>

   <scm>
      <connection>scm:svn:https://svn.petalslink.org/svnroot/trunk/product/dev/prod/petals/petals-samples/petals-samples-camel/sa-camel-simpleroute</connection>
      <developerConnection>${project.scm.connection}</developerConnection>
   </scm>
</project>
