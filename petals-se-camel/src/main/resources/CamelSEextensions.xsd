<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="http://petals.ow2.org/components/petals-se-camel/version-1.0"
   xmlns:petalsCDK="http://petals.ow2.org/components/extensions/version-5" xmlns:petals-se-camel="http://petals.ow2.org/components/petals-se-camel/version-1.0"
   elementFormDefault="qualified">
   
   <xs:import namespace="http://petals.ow2.org/components/extensions/version-5" schemaLocation="CDKextensions.xsd" />

   <!-- SU configuration -->
    <!-- Camel provide configuration -->
   <xs:element name="service-id" type="petalsCDK:settablestring" default="">
      <xs:annotation>
         <xs:documentation>A unique id to identify the service in Camel routes</xs:documentation>
      </xs:annotation>
   </xs:element>
   
   <xs:element name="java-routes" type="xs:string">
      <xs:annotation>
         <xs:documentation>Java Routes that will be instantiated in the Camel Service Engine. Must extends Camel's RouteBuilder.</xs:documentation>
      </xs:annotation>
   </xs:element>
   
   <xs:element name="xml-routes" type="petalsCDK:File">
      <xs:annotation>
         <xs:documentation>XML Routes that will be instantiated in the Camel Service Engine. Must have the Spring Camel namespace.</xs:documentation>
      </xs:annotation>
   </xs:element>

</xs:schema>